generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String
  password    String
  is_verified Boolean  @default(false)
  updated_at  DateTime @updatedAt
  created_at  DateTime @default(now())

  @@map("users")
}

model Course {
  id         Int      @id @default(autoincrement())
  name       String
  code       String   @unique

  @@map("courses")
}
